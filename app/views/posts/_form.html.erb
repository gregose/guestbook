<div class="col-md-6 post-form">
  <%= form_for(@post, role: "form") do |f| %>
    <div class="form-group">
      <%= f.label :message %><br>
      <%= f.text_area :message, class: "form-control", rows: "5" %>
    </div>

    <div class="actions">
      <%= f.submit("Post", class: "btn btn-default") %>
    </div>
  <% end %>
</div>
